{
  "manifest_version": 3,
  "name": "AI Chat Exporter",
  "version": "1.0",
  "description": "Export AI chat history from tu-zi.com",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://*.tu-zi.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tu-zi.com/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
